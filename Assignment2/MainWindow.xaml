<Window x:Class="A2ShibrahMisbah.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2ShibrahMisbah"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Canvas>
        <DataGrid x:Name="grdProducts" Height="356" Width="368" Canvas.Left="32" Canvas.Top="35"/>
        <Button x:Name="btnLoadAllProducts" Content="Load All Products" Canvas.Left="434" Canvas.Top="35" Height="40" Width="187" FontSize="15" FontWeight="Bold" Click="btnLoadAllProducts_Click"/>
        <Label Content="ID" Canvas.Left="495" Canvas.Top="110" FontSize="15" FontWeight="Bold"/>
        <Label Content="Name" Canvas.Left="460" Canvas.Top="152" FontSize="15" FontWeight="Bold"/>
        <Label Content="Price" Canvas.Left="470" Canvas.Top="194" FontSize="15" FontWeight="Bold"/>
        <Label Content="Quantity" Canvas.Left="434" Canvas.Top="236" FontSize="15" FontWeight="Bold"/>
        <TextBox x:Name="txtId" Canvas.Left="532" Canvas.Top="114" TextWrapping="Wrap" Width="89" FontSize="15" FontWeight="Bold"/>
        <TextBox x:Name="txtName" Canvas.Left="532" Canvas.Top="160" TextWrapping="Wrap" Width="236" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPrice" Canvas.Left="531" Canvas.Top="202" TextWrapping="Wrap" Width="237" FontSize="15" FontWeight="Bold"/>
        <TextBox x:Name="txtQuantity" Canvas.Left="532" Canvas.Top="244" TextWrapping="Wrap" Width="236" FontSize="15" FontWeight="Bold"/>
        <Button x:Name="btnFind" Content="Find" Canvas.Left="650" Canvas.Top="114" Height="29" Width="118" FontSize="15" FontWeight="Bold" Click="btnFind_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="btnInsert" Content="Insert" Canvas.Left="662" Canvas.Top="359" Height="29" Width="106" FontSize="15" FontWeight="Bold" Click="btnInsert_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnClearData" Content="Clear Data" Canvas.Left="650" Canvas.Top="35" Height="40" Width="118" FontSize="15" FontWeight="Bold" Click="btnClearData_Click"/>
        <ComboBox x:Name="cmbCategories" Canvas.Left="532" Canvas.Top="289" Width="236" Height="42" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="cmbCategories_SelectionChanged"/>
        <Label Content="Categories" Canvas.Left="416" Canvas.Top="292" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnSearch" Content="Search By Name" Canvas.Left="532" Canvas.Top="359" Height="29" Width="118" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnSearch_Click"/>
    </Canvas>
</Window>
